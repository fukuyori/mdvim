{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "baseUrl": "./src/ts",
    "paths": {
      "@/*": ["./*"],
      "@editor/*": ["editor/*"],
      "@parser/*": ["parser/*"],
      "@utils/*": ["utils/*"]
    },
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
